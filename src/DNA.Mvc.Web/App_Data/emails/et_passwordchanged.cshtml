@using DNA.Web;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Password changed</title>
    <style type="text/css">
        blockquote { border-left: 15px solid #cccccc; background-color: #eeeeee; padding: 5px; }
    </style>
</head>
<body>
    <p>
        Hi {username}:</p>
    <p>
        Your password has been changed:</p>
    <blockquote>
        <p>
            <b>User:</b><i>{username}</i></p>
        <p>
            <b>Password:</b><i>{password}</i></p>
    </blockquote>
    You should use this username and password to <a href="@(UrlResolver.Resolve(Context) + "/account/login")">
        login</a> our website next time.
</body>
</html>
