@model ContentFieldValue
@{
    var field = Model.Field as DateField;
    DateTime val = field.Parse(Model.Raw);    
}
@if (val != DateTime.MinValue)
{ 
    <time datetime="val">
        @if (field.ShowTime)
        {
            @val.ToString(System.Threading.Thread.CurrentThread.CurrentUICulture.DateTimeFormat.FullDateTimePattern) 
        }
        else
        {
            @val.ToLongDateString()
        }
    </time>
}
else
{
    <span>-</span>
}